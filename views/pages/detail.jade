extends ../layout

block content
    // 这里的.container和.row都是bootstrap里定义的类名
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.title

